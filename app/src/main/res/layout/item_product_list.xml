<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/rl_product_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="203dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent">

    <ImageView
            android:id="@+id/iv_product_list_item_img"
            android:layout_width="110dp" android:layout_height="110dp"
               android:layout_centerHorizontal="true"
               android:src="@drawable/img_fruit_me"
    />

    <TextView
            android:id="@+id/tv_product_list_item_name"
            android:layout_marginTop="90dp"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#4d4d4d"
            android:letterSpacing="-0.01"
            android:text="수박"
    />
    <TextView
            android:id="@+id/tv_product_list_item_price"
            android:layout_below="@+id/tv_product_list_item_name"
            android:layout_alignStart="@+id/tv_product_list_item_name"
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:letterSpacing="-0.01"
            android:text="10,000"
    />
    <TextView
            android:layout_toRightOf="@+id/tv_product_list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#4d4d4d"
            android:text="원"
            android:layout_alignTop="@+id/tv_product_list_item_price"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"
    />

    <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_product_list_item_price"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/btn_minus"/>
        <TextView
                android:id="@+id/tv_product_list_item_cnt"
                android:layout_marginHorizontal="8dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="14sp"
                  android:textColor="#4d4d4d"
                  android:text="77"
                  android:layout_gravity="center_vertical"
        />

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/btn_plus"/>

        <ImageView
                android:layout_marginStart="9dp" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:src="@drawable/icon_bag_2"/>
    </LinearLayout>


</RelativeLayout>
