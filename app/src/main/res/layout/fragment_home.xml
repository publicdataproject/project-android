<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v4.widget.NestedScrollView
            android:id="@+id/sv_home_fra"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="145dp">
            <android.support.v4.view.ViewPager
            android:id="@+id/vp_home_fra_banner"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24.3dp"
                    android:background="@drawable/arrow_r"
                    android:layout_gravity="center|end"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24.3dp"
                    android:background="@drawable/arrow_l"
                    android:layout_gravity="center|start"
            />
            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator_home_fra_banner"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="bottom|center"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp">
        <TextView
            android:id="@+id/tv_home_fra_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/농민_한마디"
            android:layout_marginTop = "30dp"
            android:layout_marginBottom = "15dp"
            android:text_size="16sp"
            android:tedxt_color = "#000000"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_home_fra_comment"
            android:layout_width= "match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
        />

        <TextView
            android:id="@+id/tv_home_fra_season"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/제철_농축산물"
            android:layout_marginTop = "30dp"
            android:layout_marginBottom = "15dp"
            android:text_size="16sp"
            android:tedxt_color = "#000000"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_home_fra_season"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
        />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>