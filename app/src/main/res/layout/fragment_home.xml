<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v4.widget.NestedScrollView>
        <FrameLayout>
            <android.support.v4.view.ViewPager
            android:id="@+id/home_fra_banner_VP"
            android:layout_width="match_parent"
            android:layout_height="145dp" />
            <me.relex.circleindicator.CircleIndicator2
                android:id="@+id/home_fra_banner_indicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="bottom|center"/>
        </FrameLayout>

        <TextView
            android:id="@+id/main_fra_home_sentense_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="농민 한마디"
            android:layout_marginTop = "30dp"
            android:layout_marginBottom = "15dp"
            android:text_size="16sp"
            android:tedxt_color = "#000000"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width= "@+id/main_fra_home_sentence_RV"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/main_fra_home_food_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제철 농축산물"
            android:layout_marginTop = "30dp"
            android:layout_marginBottom = "15dp"
            android:text_size="16sp"
            android:tedxt_color = "#000000"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="@+id/main_fra_home_food_RV"
            android:layout_height="wrap_content" />

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>