<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#ffffff">
    <android.support.v4.widget.NestedScrollView
            android:id="@+id/sv_home_fra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <FrameLayout
                    android:id="@+id/fl_home_fra_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >
                <android.support.v4.view.ViewPager
                        android:id="@+id/vp_home_fra_banner"
                        android:layout_width="match_parent"
                        android:layout_height="167dp"/>

                <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/indicator_home_fra_banner"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="8dp"
                />

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/ll_home_fra_comment"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
            >
                <TextView
                    android:id="@+id/tv_home_fra_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/농민_한마디"
                    android:layout_marginTop = "30dp"
                    android:layout_marginBottom = "15dp"
                    android:textSize="16sp"
                    android:textColor = "#000000"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_home_fra_comment"
                    android:layout_width= "match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/ll_home_fra_season"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
            >
                <TextView
                    android:id="@+id/tv_home_fra_season"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/제철_농축산물"
                    android:layout_marginTop = "30dp"
                    android:layout_marginBottom = "15dp"
                    android:textSize="16sp"
                    android:textColor= "#000000"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_home_fra_season"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                />

            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>